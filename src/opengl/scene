#ifndef OPENGL_SCENE_H
#define OPENGL_SCENE_H

#include "types"

struct Scene_t
{
public:
	vector<Group_t *> groups;
	vector<PointLight_t *> pointlights;
	
	vec3 ambient;

	Scene_t();
	~Scene_t();

	void Clear();
	void Add(Group_t *);
	void Add(PointLight_t *);
	void Remove(Group_t *);
	void Remove(PointLight_t *);

	void DrawItems();
	void Order();
	void CalcLights();
	void SortLights();
	void BindLights(Shader_t *);
};

#endif