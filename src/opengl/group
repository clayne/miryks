#ifndef OPENGL_GROUP_H
#define OPENGL_GROUP_H

#include "types"
//#include "aabb"

// A basic 3d object with a transformation

struct group_t
{
	string name; // debug

	mat4 matrix, matrix_world;

	group_t *parent;
	geometry_t *geometry, *axis;

	vector<group_t *> groups, flat;

	group_t();
	void Add(group_t *);
	void Update();
	void Draw(const mat4 &);
	void DrawClassic(const mat4 &);
	void Flatten(group_t *);
};

#endif