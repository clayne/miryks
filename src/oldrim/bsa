#include <vector>
#include <fstream>

using namespace std;

struct bsa_hedr_t
{
	char id[4];
	unsigned long ver, offset, flags, fos, fis, fosl, fisl, file_flags;
};

struct forcd_t {
	long long hash;
	unsigned long fcount, offset;
};

struct fircd_block_t {
	char name[4];
	unsigned long size, offset;
};

struct fircd_t {
	char name[4];
	unsigned long size, offset;
};

struct bsa_t
{
	bsa_hedr_t hedr;
	forcd_t *forcds;
	basic_ifstream<char> is;
	vector<unsigned char> data;
};

bsa_t bsa_load(const string &);
void bsa_load_folders(bsa_t &);

void bsa_print_hedr(bsa_t &);
void bsa_print_forcd(bsa_t &, int);