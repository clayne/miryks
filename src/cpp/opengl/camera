#ifndef OPENGL_CAMERA_H
#define OPENGL_CAMERA_H

#include "types"

#include <glm/gtc/matrix_transform.hpp>


struct Camera
{
	vec3 pos, pos2;
	mat4 view, projection;

	float fyaw = 0, fpitch = -pif / 2;
	float fzoom = 45;

	bool w = false, a = false, s = false, d = false;
	bool r = false, f = false;
	bool shift = false, disabled = false;
	Camera();

	void Mouse(float, float);
	void Move(float);
	void Call();
	void UpDown(float);
};

struct Camera2
{
	vec3 pos, pos2;
	
};

#endif