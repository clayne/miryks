#ifndef OPENGL_TEXTURE_H
#define OPENGL_TEXTURE_H

#include "types"

// https://learnopengl.com/Getting-started/Textures

struct Texture
{
    friend Texture *GetTexture(const string &);

    GLuint tid;

    const string path;

protected:
    Texture(const string &);
    ~Texture();

    void Load();
};

#endif